@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/Content/css/Login_Page.css" rel="stylesheet" />
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body style="background-image:url('/Content/Images/EPAM_winter_party-081_72DPI RGB_.jpg'); background-repeat: no-repeat;
    background-size: cover;
    background-position: 100% top;
    background-attachment: fixed;">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item ">
                <a class="nav-link " href="#">
                    <img src="~/Content/Images/Master_Page/logo_white-blue.png" width="80" height="28" />
                </a>
            </li>
        </ul>
    </nav>
    @*Alert Model*@
    @if (ViewData["Error"]!= null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>@ViewData["Error"]</strong> 
        </div>
    }


    <div>
        <div class="card">
            <div class="card-img-overlay">
                <div id="login">
                    <h3 class="text-center text-white pt-5"></h3>
                    <div class="container">
                        <div id="login-row" class="row justify-content-center align-items-center">
                            <div id="login-column" class="col-md-12">
                                <div id="login-box" class="col-md-8">
                                    <form id="login-form" class="form" action="" method="post">
                                        <h3 class="text-center text-info">Login</h3>
                                        <div class="form-group">
                                            <label id="label1" for="username" class="text-info"></label><br>
                                            <input type="email" name="username" id="username" class="form-control" placeholder="Enter User Name">
                                            <span id="UsernameSpan" style="color:red"></span>
                                        </div>
                                        <div class="form-group">
                                            <label id="label2" for="password" class="text-info"></label><br>
                                            <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password">
                                            <span id="PassworddSpan" style="color:red"></span>
                                        </div>
                                        <div class="form-group">
                                            <br>
                                            <input type="submit" id="submitcheck" name="submit" class="btn btn-info btn-md" value="Submit" onclick="return funValid()">
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer id="bottom">© 2020 EPAM Systems, Inc. All Rights Reserved</footer>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="~/Content/Js/Login/LoginValidation.js"></script>
</body>
</html>
